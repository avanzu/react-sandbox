{
  "env": {
    "es6": true,
    "node": true,
    "jest": true
  },
  "parserOptions": {
    "ecmaVersion": 2018
  },
  "extends": "react-app",
  "rules": {
    "indent": [
      "warn",
      4
    ],
    "no-console": "off",
    "no-unused-vars": "warn",
    "key-spacing": ["warn", {"align": "colon"}],
    "linebreak-style": [
      "error",
      "unix"
    ],
    "quotes": [
      "error",
      "single"
    ],
    "semi": [
      "warn",
      "never"
    ]
  }
}
